<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Krishak" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_primary</item>
        <item name="colorPrimaryVariant">@color/green_primary_variant</item>
        <item name="colorOnPrimary">@color/surface_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow_accent</item>
        <item name="colorSecondaryVariant">@color/yellow_accent</item>
        <item name="colorOnSecondary">@color/text_primary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/green_primary_variant</item>
        
        <!-- Backgrounds -->
        <item name="android:windowBackground">@color/background_cream</item>
        
        <!-- Typography & Shapes -->
        <item name="cardCornerRadius">12dp</item>
        <item name="buttonStyle">@style/Widget.Krishak.Button</item>
    </style>

    <style name="Widget.Krishak.Button" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">24dp</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:paddingHorizontal">24dp</item>
    </style>

    <!-- Correct Search View Theme -->
    <style name="SearchViewTheme" parent="ThemeOverlay.AppCompat.Light">
        <!-- Text Colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="android:editTextColor">@color/text_primary</item>
        
        <!-- Icon Colors -->
        <item name="colorControlNormal">@color/text_secondary</item>
        <item name="android:tint">@color/text_secondary</item>
    </style>
</resources>